rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Assuming 'role' field in user document or custom claims
      // Ideally custom claims, but falling back to doc lookup for simplicity
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isAdvisor() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'asesor';
    }

    // --- Collections Rules ---

    // 1. Users Collection
    match /users/{userId} {
      // Read: Owner or Admin or Advisor (to see basic info of clients)
      allow read: if isOwner(userId) || isAdmin() || isAdvisor();
      
      // Write: Owner (restricted fields) or Admin
      allow create: if isAuthenticated(); // Allow signup
      allow update: if (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) || isAdmin();
      allow delete: if isAdmin();
    }

    // 2. Leads Collection (High Sensitivity)
    match /leads/{leadId} {
      allow read: if isAdmin() || (isAdvisor() && resource.data.assignedTo == request.auth.uid);
      allow create: if isAuthenticated(); // Any auth user can create a lead (e.g. for themselves)
      allow update: if isAdmin() || (isAdvisor() && resource.data.assignedTo == request.auth.uid);
    }

    // 3. Catalog (Public Read, Admin Write)
    match /modelos/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /desarrollos/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /desarrolladores/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Analytics
    match /analytics_events/{eventId} {
      allow create: if true; // Analytics should be open for creation? Or only auth? 
                             // Usually "if true" for public site navigation tracking, but we enforce auth in UserContext.
                             // Let's keep strict:
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }
    
    match /analytics_sessions/{sessionId} {
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.uid);
      allow read: if isAdmin();
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
